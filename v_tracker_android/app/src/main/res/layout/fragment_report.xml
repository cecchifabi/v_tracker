<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.report.ReportFragment">

    <TextView
        android:id="@+id/title3"
        android:layout_width="337dp"
        android:layout_height="110dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="10dp"
        android:text="You need a QR code from your medical report assuring your current status"
        android:textAlignment="center"
        android:textColor="#E5000000"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/current_status" />

    <TextView
        android:id="@+id/title"
        android:layout_width="357dp"
        android:layout_height="132dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="10dp"
        android:text="Change your status from healthy to infected or vice versa, so the other users can be aware of your previous locations  "
        android:textAlignment="center"
        android:textColor="#E5000000"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.036" />

    <Button
        android:id="@+id/buttonChangeStatus"
        android:layout_width="227dp"
        android:layout_height="54dp"
        android:layout_marginTop="48dp"
        android:text="CHANGE STATUS"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title3" />

    <ImageView
        android:id="@+id/imageViewVirus"
        android:layout_width="106dp"
        android:layout_height="101dp"
        android:background="#D14D4D"
        android:cropToPadding="false"
        android:src="@drawable/ic_notification"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title" />

    <TextView
        android:id="@+id/current_status"
        android:layout_width="428dp"
        android:layout_height="58dp"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:textColor="#E5020202"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewVirus" />
</androidx.constraintlayout.widget.ConstraintLayout>